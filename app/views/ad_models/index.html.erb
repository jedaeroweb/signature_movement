<% breadcrumb :ad_models %>
<section id="model_main" class="sub_main row">
  <%= render :partial => 'layouts/ad' %>
  <ul class="media-list col-12">
    <% unless @ad_models.empty? %>
      <% @ad_models.each do |model| %>
        <li class="media shadow-sm rounded" itemscope itemtype="http://schema.org/Person">
          <%= link_to ad_model_path(model) do %>
            <%= image_tag model.photo.medium_thumb.url, :itemprop => "image", :class => "mr-3" %>
          <% end %>
          <div class="media-body">
            <h4 class="media-heading" itemprop="name"><%= link_to model.title, ad_model_path(model) %></h4>
            <%= link_to ad_model_path(model) do %>
              <p itemprop="description"><%= simple_format(model.content) %></p>
            <% end %>
            <%=render 'layouts/vote', vote_model: model  %>
          </div>
        </li>
      <% end %>
    <% else %>
      <li><%= t(:no_data) %></li>
    <% end %>
  </ul>
  <div class="col-12">
    <%= link_to t(:link_new), new_ad_model_path %>
    <%= paginate @ad_models %>
  </div>
</section>
