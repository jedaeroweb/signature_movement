<%= form_with(model: [:admin,notice], local: true) do |form| %>
<% if notice.errors.any? %>
<div id="error_explanation" class="alert alert-danger">
	<a href="#" class="close" data-dismiss="alert">&times;</a>
	<h2><%= pluralize(notice.errors.count, "error") %> prohibited this request from being saved:</h2>
	<ul>
		<% notice.errors.full_messages.each do |msg| %>
		<li>
			<%= msg %>
		</li>
		<% end %>
	</ul>
</div>
<% end %>
<div class="form-group">
	<%= form.label :title %>
	<%= form.text_field :title,:class=>"form-control",:required=>"required" %>
</div>
	<div class="form-group">
		<%= form.label :content %>
		<%= form.rich_text_area :content %>
	</div>
<div class="form-group">
	<%= form.label :enable %>
	<%= form.check_box :enable %>
</div>
	<div class="d-grid gap-2 mt-3">
		<%= form.submit :class => "btn btn-primary btn-block btn-lg" %>
	</div>
<% end %>
