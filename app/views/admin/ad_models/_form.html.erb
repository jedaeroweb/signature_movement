<%= form_with model: [:admin, ad_model], multipart: true, data: { turbo_frame: "_top" } do |f| %>
	<% if ad_model.errors.any? %>
<div id="error_explanation" class="alert alert-danger">
	<a href="#" class="close" data-dismiss="alert">&times;</a>
	<h2><%= pluralize(ad_model.errors.count, "error") %> prohibited this request from being saved:</h2>
	<ul>
		<% ad_model.errors.full_messages.each do |msg| %>
		<li>
			<%= msg %>
		</li>
		<% end %>
	</ul>
</div>
<% end %>
<div class="form-group">
	<%= f.label :title,:class=>'form-label' %>
	<%= f.text_field :title,:class=>"form-control",:required=>"required" %>
</div>
<div class="form-group">
	<%= f.label :photo,:class=>'form-label' %>
	<div>
		<% if ad_model.photo? %>
		<%= image_tag(ad_model.photo.small_thumb) %>
		<% end %>
		<%= f.file_field :photo %>
		<%= f.hidden_field :photo_cache %>
	</div>
</div>
<div class="form-group">
	<%= f.label :description %><br />
	<%= f.text_area :description, :class=>'form-control', :rows=>5, :required=>'required' %>
</div>
<div class="form-group">
	<%= f.label :content %><br />
	<%= f.text_area :content, :class=>'form-control', :rows=>5, :required=>'required' %>
</div>
<div class="form-group">
	<%= f.label :enable %>
	<%= f.check_box :enable %>
</div>
	<div class="d-grid gap-2">
	<%= f.submit :class=>"btn btn-primary" %>
</div>
<% end %>
