<div class="container">
  <div class="row">
    <section class="col-12 col-lg-8 p-3 mx-auto" data-controller="login">
      <%=render 'users/sns' %>

      <div class="text-center" style="margin-top:30px;padding-top:30px;border-top:1px solid #ccc" data-login-target="noSnsIdParent">
      <button class="btn btn-primary" data-login-target="noSnsId" data-action="click->login#toggle">SNS계정 없음</button>
      </div>
      <div class="d-none mt-2" data-login-target="noSnsLogin">
        <h2><%= t(:service_name) %> <%= t(:login_title) %></h2>
        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "form-horizontal", :id => "sl_login_form", :role => "form" }) do |f| %>
          <div class="card mb-3">
            <div class="card-body p-3">

              <div class="form-group row mt-3">
                <label for="sl_email" class="col-sm-2 col-form-label text-end"><%= t(:email) %></label>
                <div class="col-sm-10">
                  <%= f.email_field :email, :autofocus => true, :class => "form-control form-control-lg", :required => "required", :placeholder => t(:login_p_email) %>
                </div>
              </div>
              <div class="form-group row mt-3">
                <label for="sl_password" class="col-sm-2 col-form-label text-end"><%= t(:password) %></label>
                <div class="col-sm-10">
                  <%= f.password_field :password, :class => "form-control form-control-lg", :required => "required", :placeholder => t(:login_p_password) %>
                </div>
              </div>
              <div class="form-group row mt-3">
                <div class="col-sm-offset-2 col-sm-10">
                  <%= f.check_box :remember_me, data: { action: "change->login#handleRememberMe" }
                  %>
                  <%= f.label :remember_me %>
                </div>
              </div>
            </div>
          </div>

          <div class="d-grid gap-2 mb-3">
              <button type="submit" class="btn btn-primary btn-lg"><%= t(:login) %></button>
          </div>
        <% end %>
        <div class="row">
          <div class="col-12 col-xl-6">
            <%= link_to t(:new_user), new_user_registration_path %>
          </div>
        </div>
      </div>

    </section>
  </div>
</div>
